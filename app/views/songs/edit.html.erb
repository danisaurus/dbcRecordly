<div class="container">
    <h1>Edit Song</h1>
    

    <%= form_for @song, :html => {:class => 'form-inline'} do |f| %> 
        <div class="form-group">
            <label for="songTitle">Title:</label>
            <%= f.text_field :title, :class => 'form-control', :id => 'songTitle' %></p>
        </div>
        <div class="form-group">
            <label for="albumTitle">Album:</label>
            <%= f.text_field :album, :class => 'form-control', :id => 'albumTitle' %></p>
        </div>
        <div class="form-group">
            <label for="artist">Artist:</label>
            <%= f.text_field :artist, :class => 'form-control', :id => 'artist' %></p>
        </div>
        <%= f.submit "Submit", :class => 'btn btn-default' %>
    <% end %>
    
    <%= link_to 'Back', song_path %>

</div>