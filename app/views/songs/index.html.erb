<div class="container">
    <h1>Add A Song</h1>

    <%= form_for :song, url: '/songs', :html => {:class => 'form-inline'} do |f| %>

        <div class="form-group">
            <label for="songTitle">Title:</label>
            <%= f.text_field :title, :class => 'form-control', :id => 'songTitle' %>
        </div>
        <div class="form-group">
            <label for="albumTitle">Album:</label>
            <%= f.text_field :album, :class => 'form-control', :id => 'albumTitle' %>
        </div>
        <div class="form-group">    
            <label for="artist">Artist:</label>
            <%= f.text_field :artist, :class => 'form-control', :id => 'artist' %>
        </div>
        <%= f.submit "Submit", :class => 'btn btn-default' %>

    <% end %>



    <div class="row">
        <div class="col-xs-12 margin-top">
            <table class="table table-bordered">
                <thead> 
                    <tr>
                        <th><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></th> 
                        <th>Song</th> 
                        <th>Artist</th> 
                        <th>Album</th>
                        <th>Edit</th>
                    </tr> 
                </thead>
                <tbody>
                    <% if @songs %>
                        <% @songs.each do |song|  %>
                            <tr>
                                <td><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></td>
                                <td><%= song.title %></td>
                                <td><%= song.album %></td>
                                <td><%= song.artist %></td>
                                <td><%= link_to 'Edit', edit_song_path(song) %></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>